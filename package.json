{
  "name": "ncognito",
  "version": "1.0.2",
  "description": "Cross browser incognito mode extension",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "scripts": {
    "release": "npm run prettier && npm run lint && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "lint": "eslint src --fix",
    "prettier": "prettier --write 'src/**/*.{vue,js,scss,html}'"
  },
  "dependencies": {
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.10.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.1.0",
    "eslint": "6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.2.3",
    "extensionizer": "^1.0.1",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "node-sass": "^4.12.0",
    "platform": "^1.3.5",
    "prettier": "^1.18.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "vue-eslint-parser": "^6.0.4",
    "vue-loader": "^15.7.1",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.39.1",
    "webpack-chrome-extension-reloader": "^1.3.0",
    "webpack-cli": "^3.3.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{vue,js}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ],
    "src/**/*.{scss}": [
      "npm run prettier",
      "git add"
    ],
    "src/**/*.{html}": [
      "npm run prettier",
      "git add"
    ]
  },
  "browserslist": [
    "> 0.25%",
    "not ie 11",
    "not op_mini all"
  ]
}
